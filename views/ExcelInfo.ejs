<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Management</title>
    <link href="../assets/bootstrap/css/bootstrap.min.css" rel="stylesheet">
</head>

<body style="background-color:lightblue;" >
    <%- include('./public/Navbar.ejs') %>
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-12 col-md-8 col-lg-6 pb-5">
                    <form action="/excelinfo" method="post">
                        <div class="card border-primary rounded-0" style="border: none; box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px;">
                            <div class="card-header p-0">
                                <div class="bg-info text-white text-center py-2">
                                    <h3><i class="fa fa-envelope"></i> Update Entry </h3>
                                </div>
                            </div>
                            <%- include('./public/messages') %>
                                <div class="card-body p-3 mt-4 mb-3">

                                    <!--Body-->
                                    
                                    <select class="form-select form-select-md mb-3" aria-label=".form-select-lg example" name="tablename">
                                        <% values.forEach(function(item){ %>
                                            <option value="<%= item.name %>"><%= item.name %></option>
                                            <% }) %>
                                      </select>

                                    <div class="form-group">
                                        <div class="input-group mb-2">
                                            <input type="text" class="form-control" id="index" name="index"
                                                placeholder="Entry NUMBER" required>
                                        </div>
                                    </div>

                                    <div class="text-center mt-3">
                                        <input type="submit" value="Submit"
                                            class="btn btn-info btn-block rounded-0 py-2" class="btn btn-info btn-block rounded-0 py-2" style="width: 100%; color: white; font-weight: 600;">
                                    </div>
                                </div>

                        </div>
                    </form>
                    <!--Form with header-->
                </div>
            </div>
        </div>
</body>

</html>