<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Management</title>
    <!-- Bootstrap cdn -->
    <link href="../assets/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <style>
        #loader {
            background: #ffffff url('../assets/public/Logo.jpg') no-repeat center center;
            background-size: 20%;
            height: 100vh;
            width: 100%;
        }

        #loader p {
            position: absolute;
            top: 70%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 25px;
            text-align: center;
            font-weight: bold;
            color: black;
        }
    </style>
</head>

<body onload="myFunction()" style="background-color:lightblue;">

    <div id="loader">
        <p>MNY E-COMMERCE & SAFETY SOLUTION PRIVATE LIMITED</p>
    </div>



    <div class="container mt-5" style="display:none;" id="myDiv">
        <div class="row justify-content-center mt-5">
            <div class="col-12 col-md-8 col-lg-6 pb-5 mt-5">
                <form action="/" method="post">
                    <div class="card border-primary rounded-0 mt-5"
                        style="border: none; box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px;">
                        <div class="card-header p-0">
                            <div class="bg-info text-white text-center py-2">
                                <h3><i class="fa fa-envelope"></i> Login User</h3>
                            </div>
                        </div>
                        <%- include('./public/messages.ejs') %>
                            <div class="card-body p-4">

                                <!--Body-->
                                <div class="form-group mt-3">
                                    <div class="input-group mb-2">
                                        <input type="text" class="form-control" id="empid" name="empid"
                                            placeholder="Enter Employee Id">
                                    </div>
                                </div>

                                <div class="form-group mt-1">
                                    <div class="input-group mb-2">
                                        <input type="password" class="form-control" id="password" name="password"
                                            placeholder="Your Password">
                                    </div>
                                </div>

                                <div class="text-center mt-3 mb-3">
                                    <input type="submit" value="Login" class="btn btn-info btn-block rounded-0 py-2"
                                        style="width: 100%; color: white; font-weight: 600;">
                                </div>
                            </div>

                    </div>
                </form>
                <!--Form with header-->
            </div>
        </div>
    </div>
    <script>
        var myVar;

        function myFunction() {
            myVar = setTimeout(showPage, 1000);
        }

        function showPage() {
            document.getElementById("loader").style.display = "none";
            document.getElementById("myDiv").style.display = "block";
        }
    </script>
</body>

</html>