<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Management</title>
    <link href="../assets/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <script src="../../assets/bootstrap/js/bootstrap.bundle.min.js"></script>
</head>

<body style="background-color:lightblue;">
    <%- include('./public/Navbar.ejs') %>
    
        <div class="container mt-4">
            <% if(typeof success !='undefined' ) { %>
                <div class="alert alert-primary alert-dismissible fade show m-2" role="alert">
                    <%= success %>
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>
            <div class="row justify-content-center mt-5">
                <div class="col-12 col-md-8 col-lg-6 pb-5">
                    <form action="/upload" method="post" enctype="multipart/form-data">
                        <div class="card border-primary rounded-0" style="border: none; box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px;">
                            <div class="card-header p-0">
                                <div class="bg-info text-white text-center py-2">
                                    <h3><i class="fa fa-envelope"></i> Upload File </h3>
                                </div>
                            </div>
                            <%- include('./public/messages') %>
                                <div class="card-body p-3 mt-3 mb-3">

                                    <!--Body-->
                                    <div class="form-group">
                                        <div class="input-group mb-2">
                                            <input type="file" class="form-control" name="myfile" required>
                                        </div>
                                    </div>

                                    <div class="text-center mt-3">
                                        <input type="submit" value="Upload"
                                            class="btn btn-info btn-block rounded-0 py-2" class="btn btn-info btn-block rounded-0 py-2" style="width: 100%; color: white; font-weight: 600;">
                                    </div>
                                </div>
                        </div>
                    </form>
                    <!--Form with header-->
                </div>
            </div>
        </div>
</body>

</html>