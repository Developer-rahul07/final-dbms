<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Data Management</title>
  <link href="../assets/bootstrap/css/bootstrap.min.css" rel="stylesheet">
</head>

<body style="background-color:lightblue;">
  <%- include('./public/Navbar.ejs') %>
    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6 pb-5">
          <form action="/createuser" method="post">
            <div class="card border-primary rounded-0" style="border: none; box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px;">
              <div class="card-header p-0">
                <div class="bg-info text-white text-center py-2">
                  <h3><i class="fa fa-envelope"></i> Add User</h3>
                </div>
              </div>
              <div class="card-body p-3 mt-3">
                <!--Body-->
                <div class="form-group">
                  <div class="input-group mb-2">
                    <input type="text" class="form-control" id="username" name="username" placeholder="name" required>
                  </div>
                </div>
                <div class="form-group">
                  <div class="input-group mb-2">
                    <input type="text" class="form-control" id="empid" name="empid" placeholder="Employee Id" required>
                  </div>
                </div>

                <div class="form-group">
                  <div class="input-group mb-2">
                    <input type="text" class="form-control" id="userid" name="userid" placeholder="User Id" required>
                  </div>
                </div>

                <div class="form-group">
                  <div class="input-group mb-2">
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password"
                      required>
                  </div>
                </div>

                <div class="form-check">
                  <input class="form-check-input" type="checkbox" name="cUser" value="1" id="flexCheckDefault">
                  <label class="form-check-label" for="flexCheckDefault">
                    Create User
                  </label>
                </div>

                <div class="form-check">
                  <input class="form-check-input" type="checkbox" name="updateUser" value="1" id="flexCheckDefault">
                  <label class="form-check-label" for="flexCheckDefault">
                    Update User
                  </label>
                </div>

                <div class="form-check">
                  <input class="form-check-input" type="checkbox" name="delUser" value="1" id="flexCheckDefault">
                  <label class="form-check-label" for="flexCheckDefault">
                    Delete User
                  </label>
                </div>

                <div class="form-check">
                  <input class="form-check-input" type="checkbox" name="addList" value="1" id="flexCheckDefault">
                  <label class="form-check-label" for="flexCheckDefault">
                    Add List
                  </label>
                </div>

                <div class="form-check">
                  <input class="form-check-input" type="checkbox" name="delList" value="1" id="flexCheckDefault">
                  <label class="form-check-label" for="flexCheckDefault">
                    Delete List
                  </label>
                </div>

                <div class="form-check">
                  <input class="form-check-input" type="checkbox" name="addEntry" value="1" id="flexCheckDefault">
                  <label class="form-check-label" for="flexCheckDefault">
                    Add Entry
                  </label>
                </div>

                <div class="form-check">
                  <input class="form-check-input" type="checkbox" name="updateEntry" value="1" id="flexCheckDefault">
                  <label class="form-check-label" for="flexCheckDefault">
                    Update Entry
                  </label>
                </div>

                <div class="text-center mt-3 mb-2">
                  <input type="submit" value="Register" class="btn btn-info btn-block rounded-0 py-2" style="width: 100%; color: white; font-weight: 600;">
                </div>
              </div>

            </div>
          </form>
          <!--Form with header-->
        </div>
      </div>
    </div>
</body>

</html>